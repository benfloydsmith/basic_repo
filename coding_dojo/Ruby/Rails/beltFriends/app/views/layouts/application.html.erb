<!DOCTYPE html>
<html>
<head>
  <title>BeltFriends</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<% if current_user %>
  <%= link_to "Log Out", '/sessions', { controller: 'sessions', action: 'logout', method: 'delete' } %>
<% end %>
<%= yield %>

</body>
</html>
