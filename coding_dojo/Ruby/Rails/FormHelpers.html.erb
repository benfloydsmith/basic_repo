<!-- More Form Helpers -->
<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %></h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %=>
			<li><%= msg %></li>
        <% end %>
      </ul>
   </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<!-- Same Form as a Simple Form -->  <!-- Must add 'simple_form' in the GEM file -->
<%= simple_form_for @post do |f| %>
<%= f.input :name %>
<%= f.input :title %>
<%= f.input :content %>
<%= f.button :submit %>
<% end %>


